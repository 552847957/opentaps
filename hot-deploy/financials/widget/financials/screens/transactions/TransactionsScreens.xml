<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/widget-screen.xsd">

    <screen name="main-section-decorator">
        <section>
            <actions>
                <set field="sectionName" value="transactions" global="true"/>
                <set field="sectionStyle" value="twoColumn"/>
                <set field="requiredPermission" value="FINANCIALS_TX"/>
                <script location="component://financials/webapp/financials/WEB-INF/actions/transactions/shortcuts.bsh"/>
            </actions>
            <widgets>
                <include-screen name="main-section-template" location="component://opentaps-common/widget/screens/common/CommonScreens.xml"/>
            </widgets>
        </section>
    </screen>

    <!-- combination of find transactions and list of transactions -->
    <screen name="transactions">
        <section>
            <actions>
                <set field="pageTitleLabel" value="AccountingTransactions"/>  
                <set field="sectionHeaderUiLabel" value="AccountingTransactions"/>  
                <script location="component://financials/webapp/financials/WEB-INF/actions/transactions/transactions.bsh"/>
                <set field="parameters.listIteratorNameToUse" value="acctgTransListIt"/>
                <script location="component://financials/webapp/financials/WEB-INF/actions/transactions/findAcctgTrans.bsh"/>
                <set field="viewIndex" from-field="parameters.VIEW_INDEX" type="Integer" default-value="0"/>
                <set field="viewSize" from-field="parameters.VIEW_SIZE" type="Integer" default-value="50"/>                
            </actions>
            <widgets>
                <decorator-screen name="main-section-decorator">
                    <decorator-section name="section-body">
                        <container style="screenlet">
                            <container style="screenlet-header">
                                <label style="boxhead" text="${uiLabelMap.FinancialsFindTransactions}"/>
                            </container>
                            <container style="screenlet-body">
                                <include-form name="findAcctgTransForm" location="component://financials/widget/financials/forms/transactions/TransactionsForms.xml"/>
                            </container>
                        </container>
                        <container style="screenlet">
                            <container style="screenlet-header">
                                <label style="boxhead" text="${uiLabelMap.AccountingTransactions}"/>
                            </container>
                            <container style="screenlet-body">
                                <include-form name="listAcctgTrans" location="component://financials/widget/financials/forms/transactions/TransactionsForms.xml"/>
                            </container>
                        </container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="createQuickAcctgTransForm">
        <section>
            <actions>
                <set field="pageTitleLabel" value="FinancialsCreateQuickTransaction"/>
                <set field="quickAcctgTransFormTarget" value="createQuickAcctgTrans"/>
                <script location="component://financials/webapp/financials/WEB-INF/actions/transactions/getTransactionTypes.bsh"/>
                <script location="component://financials/webapp/financials/WEB-INF/actions/transactions/createQuickAcctgTransaction.bsh"/>
            </actions>    
            <widgets>
                <decorator-screen name="main-section-decorator">
                    <decorator-section name="section-body">
                        <container style="screenlet">
                            <container style="screenlet-header">
                                <label style="boxhead" text="${uiLabelMap.FinancialsCreateQuickTransaction}"/>
                            </container>
                            <container style="screenlet-body">
                                <platform-specific><html>
                                        <html-template location="component://financials/webapp/financials/transactions/createQuickAcctgTransForm.ftl"/></html>
                                </platform-specific>
                            </container>
                        </container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

