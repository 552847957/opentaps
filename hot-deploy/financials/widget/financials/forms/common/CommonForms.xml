<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/widget-form.xsd">

    <!-- form to select an organization -->
    <form name="selectOrganizationForm" type="single" target="main"
        default-title-style="tableheadtext" default-widget-style="inputBox" default-tooltip-style="tabletext">
        <field name="organizationPartyId" title="${uiLabelMap.FinancialsSelectOrganization}">
            <drop-down allow-empty="false">
                <list-options list-name="configuredOrganizations" key-name="partyId" description="${groupName} (${partyId})"/>
            </drop-down>
        </field>
        <field name="" title="${uiLabelMap.CommonNote}" widget-style="tabletext">
            <display description="${uiLabelMap.FinancialsDefaultCompanyForDemo}"/>
        </field>
        <field name="submitButton" title="${uiLabelMap.CommonSelect}" widget-style="smallSubmit"><submit/></field>
    </form>

    <form name="selectOrganizationToConfigureForm" type="single" target="configureOrganization"
        default-title-style="tableheadtext" default-widget-style="inputBox" default-tooltip-style="tabletext">
        <field name="organizationPartyId" title="${uiLabelMap.FinancialsSelectOrganization}">
            <drop-down allow-empty="false">
                <list-options list-name="unconfiguredOrganizations" key-name="partyId" description="${groupName} (${partyId})"/>
            </drop-down>
        </field>
        <field name="clearOrganizationFromSession"><hidden value="true"/></field>
        <field name="submitButton" title="${uiLabelMap.FinancialsConfigure}" widget-style="smallSubmit"><submit/></field>
    </form>

</forms>
