<ofbiz-component name="analytics"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/ofbiz-component.xsd">

    <resource-loader name="main" type="component"/>

    <!-- class path for Java build files, config properties files, and script files -->
    <classpath type="dir" location="config"/>
    <classpath type="jar" location="lib/*"/>
    <classpath type="jar" location="build/lib/*"/>

    <!-- data -->
    <entity-resource type="data" reader-name="seed" loader="main" location="data/AnalyticsSecurity.xml"/>
    <entity-resource type="data" reader-name="seed" loader="main" location="data/CustomerAnalysisReports.xml"/>
    <entity-resource type="data" reader-name="seed" loader="main" location="data/SalesAnalysisReports.xml"/>
    <entity-resource type="data" reader-name="seed" loader="main" location="data/OtherReports.xml"/>

    <!-- service definition files -->
    <service-resource type="model" loader="main" location="servicedef/services.xml"/>

    <!-- this MCA or mail-condition-action is used for sorting incoming emails 
    <service-resource type="mca" loader="main" location="servicedef/smcas.xml"/>-->

    <webapp name="analyticsgwt"
        title="Opentaps Commons GWT Components"
        server="default-server"
        location="webapp/analyticsgwt"
        mount-point="/analyticsgwt"
        app-bar-display="false"/>

    <webapp name="analytics"
        title="Analytics"
        server="default-server"
        location="webapp/analytics"
        base-permission="ANALYTICS"
        mount-point="/analytics"
        app-bar-display="false"/>

</ofbiz-component>


