<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/services.xsd">
    <description>Services that create index for the delegator operate.</description>
    <vendor>Open Source Strategies, Inc.</vendor>

    <service name="opentaps.createHibernateSearchIndex" engine="pojo"
        location="org.opentaps.common.domain.search.IndexingService" invoke="createHibernateSearchIndex" auth="true" transaction-timeout="7200">
        <description>create index for hibernate search </description>
    </service>

    <service name="opentaps.createIndexForGenericEntity" engine="pojo" transaction-timeout="600" location="org.opentaps.common.domain.search.IndexingService" invoke="createIndexForGenericEntity" auth="true">
        <description>the service that create index for entities</description>
        <attribute name="value" type="Object" mode="IN" optional="false"/>
    </service>    
</services>
