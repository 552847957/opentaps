<entity-eca xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/entity-eca.xsd">

    <!-- Mark the entity as updated when various entities are created or updated. -->
    <eca entity="CustRequest" operation="store" event="return">
        <action service="markCustRequestAsUpdated" mode="sync"/>
    </eca>
    <eca entity="CustRequestNote" operation="create-store" event="return">
        <action service="markCustRequestAsUpdated" mode="sync"/>
    </eca>
    <eca entity="CustRequestWorkEffort" operation="create-store" event="return">
        <action service="markCustRequestAsUpdated" mode="sync"/>
    </eca>

</entity-eca>
