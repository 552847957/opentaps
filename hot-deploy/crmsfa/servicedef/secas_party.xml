<service-eca xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/service-eca.xsd">

    <!-- after creating a party, find communication events matching the email address and assign them to this party -->
    <eca service="createPartyEmailAddress" event="commit">
        <condition field-name="emailAddress" operator="is-not-empty"/>
        <action service="crmsfa.updateActivityEmailsAssocs" mode="sync"/>
    </eca>
    <!-- after updating a contact, find communication events matching the email address and assign them to this party -->
    <eca service="updatePartyEmailAddress" event="commit">
        <condition field-name="emailAddress" operator="is-not-empty"/>
        <action service="crmsfa.updateActivityEmailsAssocs" mode="sync"/>
    </eca>

</service-eca>
