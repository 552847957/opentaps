<!-- The main purpose is to declare the Activities GWT requests, and this file should be imported in the controller.xml of
     the applications that need to use them. -->

<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">

    <!-- Include requests for common opentaps features. -->
    <include location="component://opentaps-common/webapp/common/WEB-INF/common-controller.xml"/>

    <description>Activities Module Site Configuration File</description>
    <owner>Open Source Strategies, Inc. (c) 2010-2011</owner>

    <handler name="java" type="request" class="org.ofbiz.webapp.event.JavaEventHandler"/>

    <request-map uri="gwtFindLeads">
        <security https="true" auth="true"/>
        <event type="java" path="org.opentaps.gwt.activities.server.lookup.PartyLookupService" invoke="findLeads"/>
        <response name="success" type="none"/>
        <response name="error" type="none"/>
    </request-map>

</site-conf>
